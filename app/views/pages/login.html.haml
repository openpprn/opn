.row
  .col-md-4.col-md-offset-4
    .panel.panel-default
      .panel-heading
        .panel-title Sign in
      .panel-body
        %form.form-horizontal{role: "form"}
          .form-group
            %label.col-sm-4.control-label{for: "inputEmail3"} Email
            .col-sm-8
              %input#inputEmail3.form-control{placeholder: "Email", type: "email"}/
          .form-group
            %label.col-sm-4.control-label{for: "inputPassword3"} Password
            .col-sm-8
              %input#inputPassword3.form-control{placeholder: "Password", type: "password"}/
          .form-group
            .col-sm-offset-4.col-sm-8
              .checkbox
                %label
                  %input{type: "checkbox"}/
                  Remember me
          .form-group
            .col-sm-offset-4.col-sm-8
              %a.btn.btn-primary{href: "/research"} Sign in
    %p.text-center
      Not yet a Member?
      %a{:href => "/join"} Join.
