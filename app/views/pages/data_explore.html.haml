- title("My Health Data")
- connection_sources = ["Fitbit", "Moves", "Nike Fuelband", "MapMyFitness", "Jawbone Up", "BodyMedia", "RunKeeper", "Strava Running", "Fitbit Aria", "Withings"]

.row

  .col-md-3
    = render :partial => "shared/data_nav"

  .col-md-9

    %h3 My Health Data
    %br/

    = image_tag "time-series.png", :width => "100%"

    %br/
    %br/

    .panel.panel-default
      .panel-heading
        %h4.panel-title Stream

      %table.table.table-striped.table-responsive
        %thead.small
          %td Date
          %td Health Info
          %td Source
        %tbody
          - 4.times do
            %tr
              %td March 2
              %td 10,000 Steps
              %td= connection_sources.shuffle.first
            %tr
              %td March 1
              %td 5 miles run
              %td= connection_sources.shuffle.first
            %tr
              %td Feb 28
              %td Weight: 195 pounds
              %td= connection_sources.shuffle.first
            %tr
              %td Feb 12
              %td Overall Health: 100
              %td= connection_sources.shuffle.first



      .panel-footer{:style=> "padding: 0px; padding-top: 5px;"}
        .text-center
          %ul.pagination.pagination-sm{:style=> "margin: 0px;"}
            %li
              %span &laquo;
            %li.disabled
              %span ...
            %li
              %span &raquo;



