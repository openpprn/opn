              = image_tag "http://www.gravatar.com/avatar/#{Digest::MD5.hexdigest(rand.to_s)}?d=identicon", :class => " media-item-object img-circle user-avatar"
            .media-body.small
              %strong
                = random_name
              %p
                = random_place




