
.row
  .col-md-12

    %ul.nav.nav-tabs
      %li.active
        %a{href: "#user", "data-toggle" => "tab"} User Account
      %li
        %a{href: "#basic", "data-toggle" => "tab"} Basic
      %li
        %a{href: "#notifs", "data-toggle" => "tab"} Notifications
      %li
        %a{href: "#research", "data-toggle" => "tab"} Research Topics

    %br/



    .nav.tab-content
      .tab-pane#basic
        .panel.panel-default
          .panel-heading
            %h3.panel-title Basic
          .panel-body
            test
      .tab-pane#notifs
        notifs
      .tab-pane#research
        research




      .tab-pane#user.active

        .col-md-9

          .panel.panel-default
            .panel-heading
              %h4.panel-title Login
            .panel-body
              %form.form-horizontal{role: "form"}
                .form-group
                  %label.col-sm-2.control-label Email
                  .col-sm-10
                    %p.form-control email@example.com
                .form-group
                  %label.col-sm-2.control-label{for: "inputPassword"} Password
                  .col-sm-10
                    %p.form-control-static
                      %a Reset Password



          .panel.panel-default
            .panel-heading
              %h4.panel-title Notification Preferences
            .panel-body
              %form.form-horizontal{role: "form"}
                .radio
                  %label
                    %input#optionsRadios1{checked: "checked", name: "optionsRadios", type: "radio", value: "option1"}/
                    Email Me
                .radio
                  %label
                    %input#optionsRadios2{name: "optionsRadios", type: "radio", value: "option2"}/
                    Don't Email Me

          %button.btn.btn-primary.pull-right Save


        .col-md-3
          .panel.panel-default
            .panel-heading
              %h3.panel-title Your Data

            .panel-body.text-center
              %button.btn.btn-default.btn-block Download All My Data
              %br/
              %a.small{:href => ""} Delete My Account