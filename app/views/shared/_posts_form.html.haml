= form_for post do |f|
  = f.hidden_field :post_type
  .form-group
    = f.label :title, class: 'sr-only'
    = f.text_field :title, class: 'form-control input-lg', placeholder: "Title of Post", autocomplete: :off
  .form-group
    = f.label :author, class: 'sr-only'
    = f.text_area :body, placeholder: "Author of Post", class: 'form-control input-lg'
  .form-group
    = f.label :tags, class: 'sr-only'
    = f.select :tags, post.tag_list, {}, {multiple:true, placeholder: "Enter tags for this post...", data: {role: 'tagsinput'}, class: 'input-lg'}
  .form-group
    = f.label :state, class: 'sr-only'
    = f.select :state, ["accepted", "draft", "hidden"], {prompt: "-- select state --" }, { class: 'input-lg form-control' }


  .form-group
    = f.label :body, class: 'sr-only'
    = f.text_area :body, placeholder: "Body of Post", class: 'form-control input-lg'
  = f.submit :post, class: "btn btn-success pull-right"